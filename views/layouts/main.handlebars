<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Registry</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/css/reset.css" />
    <link rel="stylesheet" href="/css/jass.css" />
  </head>

  <body>
    <header class="display-flex align-center">
      <nav class="navbar p-3 justify-content-between">
        {{! Hamburger }}

        {{!-- <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarToggleExternalContent"
          aria-controls="navbarToggleExternalContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button> --}}


         

          
        {{! Logo }}
        <a class="navbar-brand mx-2" id="home" href="#">
          <img
            src="/data/uploads/blogspace_icon.png"
            alt="An icon image"
            width="50"
            height="50"
          />
        </a>

        {{#if logged_in}}
          {{! Profile Avatar }}
          <a class="navbar-brand mx-2" id="avatar-img" href="#">
            <img
              src="https://img.logoipsum.com/332.svg"
              width="50"
              height="50"
              alt=""
            />
          </a>
        {{/if}}  

        {{#if onProfilePage}}
          {{! Avatar Upload Form }}
          <form action="/profile" enctype="multipart/form-data" method="post">
            <div class="form-group">
              <input type="file" class="form-control-file" name="uploaded_file">
              <input type="submit" value="Upload" class="btn btn-default">
            </div>
          </form>
        {{/if}}

        {{#if logged_in}}
        {{! Profile Button }}
          <button
            class="light-btn mx-2"
            id="profile"
            type="button"
          >Profile</button>
        {{/if}}

        {{! Search Bar }}
        <form class="nav-item">
          <input
            class="form-control"
            type="search"
            placeholder="Search for user"
            aria-label="Search">
        </form>
        
        {{! Create Post Button }}
        {{#if logged_in}}
          <button class="btn btn-success btn-lg text-white mx-2 nav-item" ><b>+</b></button>
        {{/if}}  

        {{! Login/Logout Button }}
        {{#if logged_in}}
          <button
            class="btn btn-outline-danger mx-2"
            id="logout"
          >Logout</button>
        {{else}}
          <button class="btn btn-outline-success mx-2" id="login">Login</button>
        {{/if}}
      </nav>
    </header>
    <main class="container container-fluid mt-5">
      {{{body}}}
      {{! this is where homepage.handlebars is going }}
    </main>
    <footer>

    </footer>

    <!-- Only include the logout script if the user is logged in -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{else}}
      <script src="/js/loginbutton.js"></script>
    {{/if}}
    <script src="/js/navbuttons.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>

</html>