    {{#each posts as |blogPostData| }} 

<div class='card postcard bg-light m-4'>

  {{!-- {{#each user as |userData|}} --}}
  <div class="card-header">
    <h3 style="color:black;">{{blogPostData.user.username}}</h3>
    {{!-- {{/each}} --}}
    <h2 style="color:black;">{{blogPostData.title}}</h2>
  </div>
  <div class="card-body l-3 px-3">
    <p style="color:#000000;">{{blogPostData.body}}</p>
    

    <button class="btn-outline-secondary rounded"><img src="/data/uploads/comment.png" id="commentButton" class="commentButtons" data-id="{{blogPostData.id}}"></button>
  </div>
  {{#each Comments as |subComment|}} {{!--Needed to interate through the comments Data. --}}
  <h5 style="color:#000000;">{{subComment.user.username}}</h5>
  <h4 style="color:#000000;" >{{subComment.body}}</h4>
  {{/each}}
  </div>
{{/each}}