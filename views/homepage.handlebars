{{#each posts as |blogPostData| }} 
<div class='card postcard bg-light m-4'>
  <div class="card-header">
    <h3 style="color:black;">{{blogPostData.username}}</h3>
    <h2 style="color:black;">{{blogPostData.title}}</h2>
  </div>
  <div class="card-body l-3 px-3">
    <p style="color:#000000;">{{blogPostData.body}}</p>

    <button class="btn-outline-secondary rounded"><img src="/data/uploads/comment.png" id="commentButton"></button>
  </div>
  </div>

{{/each}}