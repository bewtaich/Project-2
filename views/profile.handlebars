<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-description">Body:</label>
        <textarea class="form-input" id="blog-description" name="blog-description"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="create-button-profile">Create</button>
      </div>
    </form>
  </div>



<h2>My Blogs</h2>
 {{#each BlogPosts as |blogPostData| }}
<div style="padding:none;" class='card postcardprofile bg-light m-4'>
  <div class="card-header">
      <h3 style="color:black;" class="blogUser">By @{{blogPostData.user.username}}</h3>
      {{!-- {{/each}} --}}
      <h2 style="color:black;" class="blogTitle">{{blogPostData.title}}</h2>
    </div>
  <div class="card-body l-3 px-3">
      {{!-- <p style="color:#000000;" class="blogBody">{{blogPostData.body}}</p> --}}
      <p style="color:#000000;">{{blogPostData.body}}</p>
    </div>
</div>
{{/each}} 

