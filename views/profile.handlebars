<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-description">Body:</label>
        <textarea class="form-input" id="blog-description" name="blog-description"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="create-button-profile">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Projects:</h3>

    {{!-- {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}} --}}
  </div>
  {{/if}}
</div>



<h2>My Blogs</h2>
{{#each BlogPosts as |blogPostData| }} 
<div class='card postcard bg-light m-4'>
  <div class="card-header">
    <h2>{{blogPostData.title}}</h2>
  </div>  
  <div class="card-body">
    <p>{{blogPostData.body}}</p>
    <h3>{{blogPostData.username}}</h3>
  </div> 
</div>
{{/each}}
