<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-description">Body:</label>
        <textarea class="form-input" id="blog-description" name="blog-description"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="create-button-profile">Create</button>
      </div>
    </form>
  </div>



<h2>My Blogs</h2>
{{#each BlogPosts as |blogPostData| }}
<div class='card postcard bg-light m-4'>
  <div class="card-header">
    <h2>{{blogPostData.title}}</h2>
  </div>
  <div class="card-body">
    <p>{{blogPostData.body}}</p>
    <h3>{{blogPostData.user.username}}</h3>
    <button class="btn-outline-secondary rounded"><img src="/data/uploads/comment.png" data-id="{{blogPostData.id}}"
        id="commentButton" class="commentButtons"></button>
  </div>
  {{#each Comments as |subComment|}} {{!--Needed to interate through the comments Data. --}}
  <h5 style="color:#000000;">{{subComment.user.username}}</h5>
  <h4 style="color:#000000;">{{subComment.body}}</h4>
  {{/each}}
</div>
{{/each}}